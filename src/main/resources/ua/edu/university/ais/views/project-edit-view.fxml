<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.edu.university.ais.controllers.ProjectEditController">
    <children>
        <GridPane layoutX="10.0" layoutY="10.0" prefWidth="430.0" vgap="10" hgap="10" AnchorPane.TopAnchor="10.0" AnchorPane.LeftAnchor="10.0" AnchorPane.RightAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="310.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="90.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="ID Проєкту" GridPane.rowIndex="0" />
                <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Назва проєкту" GridPane.rowIndex="1" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Опис" GridPane.rowIndex="2" />
                <TextArea fx:id="descriptionArea" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" wrapText="true" />

                <Label text="Початк. інвестиції" GridPane.rowIndex="3" />
                <TextField fx:id="investmentField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Статус" GridPane.rowIndex="4" />
                <ComboBox fx:id="statusComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>

        <HBox layoutX="260.0" layoutY="350.0" spacing="10.0" AnchorPane.BottomAnchor="20.0" AnchorPane.RightAnchor="20.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" text="Зберегти" onAction="#handleSave" />
                <Button fx:id="cancelButton" mnemonicParsing="false" text="Скасувати" onAction="#handleCancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>