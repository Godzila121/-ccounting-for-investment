<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ua.edu.university.ais.controllers.MainController">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Файл">
                    <items>
                        <MenuItem text="Закрити"/>
                    </items>
                </Menu>
                <Menu text="Проєкти">
                    <items>
                        <MenuItem text="Додати новий..." onAction="#handleAddNewProject"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <TableView fx:id="projectsTable">
            <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colName" text="Назва проєкту" prefWidth="200"/>
                <TableColumn fx:id="colStatus" text="Статус"/>
                <TableColumn fx:id="colInvestment" text="Інвестиції"/>
            </columns>
            <placeholder>
                <Label text="Інвестиційні проєкти відсутні."/>
            </placeholder>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" spacing="10.0" prefWidth="150.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Button fx:id="detailsButton" text="Деталі / Розрахунок" maxWidth="Infinity" onAction="#handleShowDetails"/>
                <Button fx:id="editButton" text="Редагувати..." maxWidth="Infinity" onAction="#handleEditProject"/>
                <Button fx:id="deleteButton" text="Видалити" maxWidth="Infinity" onAction="#handleDeleteProject"/>
            </children>
        </VBox>
    </right>

</BorderPane>