<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ua.edu.university.ais.controllers.MainController">
    <top>
        <VBox>
            <children>
                <MenuBar>
                    <menus>
                        <Menu text="Файл">
                            <items>
                                <MenuItem text="Закрити"/>
                            </items>
                        </Menu>
                        <Menu text="Проєкти">
                            <items>
                                <MenuItem text="Додати новий..." onAction="#handleAddNewProject"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
                    <padding>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Інвестиційний Фонд:">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <VBox>
                            <children>
                                <Label text="Загальний бюджет:" />
                                <Label fx:id="totalBudgetLabel" text="-" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Вільний залишок:" />
                                <Label fx:id="currentBudgetLabel" text="-" style="-fx-font-weight: bold; -fx-font-size: 14px;" styleClass="text-success" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TableView fx:id="projectsTable">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colName" text="Назва проєкту" prefWidth="250"/>
                <TableColumn fx:id="colStatus" text="Статус" prefWidth="120"/>
                <TableColumn fx:id="colInvestment" text="Інвестиції" prefWidth="150"/>
            </columns>
            <placeholder>
                <Label text="Інвестиційні проєкти відсутні."/>
            </placeholder>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" spacing="10.0" prefWidth="150.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Button fx:id="detailsButton" text="Деталі / Розрахунок" maxWidth="Infinity" onAction="#handleShowDetails"/>
                <Button fx:id="editButton" text="Редагувати..." maxWidth="Infinity" onAction="#handleEditProject"/>
                <Button fx:id="deleteButton" text="Видалити" maxWidth="Infinity" onAction="#handleDeleteProject"/>

                <Button fx:id="caseStudiesButton" text="База знань" maxWidth="Infinity" onAction="#handleShowCaseStudies" />

                <Button fx:id="reportButton" text="Звіт по портфелю" maxWidth="Infinity" onAction="#handleShowReport" />

                <Region VBox.vgrow="ALWAYS" />

                <Label text="Користувач: admin" />
                <Button fx:id="logoutButton" text="Вийти" maxWidth="Infinity" onAction="#handleLogout" />
            </children>
        </VBox>
    </right>

</BorderPane>