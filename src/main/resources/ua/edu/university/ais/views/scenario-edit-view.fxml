<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.edu.university.ais.controllers.ScenarioEditController">
    <children>
        <GridPane hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Назва сценарію" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" />

                <Label text="Модифікатор доходу (%)" GridPane.rowIndex="1" />
                <TextField fx:id="incomeModifierField" text="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Модифікатор витрат (%)" GridPane.rowIndex="2" />
                <TextField fx:id="costModifierField" text="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <HBox alignment="BOTTOM_RIGHT" layoutX="230.0" layoutY="150.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" text="Зберегти" onAction="#handleSave" />
                <Button fx:id="cancelButton" mnemonicParsing="false" text="Скасувати" onAction="#handleCancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>